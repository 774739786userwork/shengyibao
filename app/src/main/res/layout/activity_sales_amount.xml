<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    
	<!-- hearder 头部标签布局 -->
	<RelativeLayout android:id="@+id/hearder_layout"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:layout_alignParentTop="true"
	    android:gravity="center_vertical"
	    android:background="@drawable/title_bar">
	    
	    <ImageView 
	        android:id="@+id/sales_amount_back"
	        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:background="@drawable/about_showleft_selector"/>
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="销售金额"
	        android:textSize="18sp"
	        android:layout_marginTop="10dp"
	        android:layout_centerHorizontal="true"
	        android:textColor="#ffffff"/>
	</RelativeLayout>
	
	<LinearLayout 
	    android:id="@+id/linear_layout"
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:orientation="horizontal"
	    android:divider="@drawable/spacer_medium"
	    android:showDividers="middle"
	    android:layout_below="@+id/hearder_layout">
	    
	    <LinearLayout android:id="@+id/sales_amount_date_layout"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	    	android:clickable="true"
	    	android:background="@drawable/my_tab_background"
	        android:layout_weight="1">
	        
	        <TextView android:id="@+id/sales_amount_date_time"
		        android:gravity="center_horizontal"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="15dp"
		        android:textColor="#000000"
		        android:text=""/>
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_weight="1">
	        
	        <TextView 
		        android:gravity="center"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dp"
		        android:textColor="#000000"
		        android:textSize="16sp"
		        android:text="总销售额"/>
	        
	        <TextView android:id="@+id/sales_amount_total_sum"
		        android:gravity="center"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:textSize="16sp"
		        android:textColor="#666666"
		        android:text="0"/>
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginTop="5dp"
	        android:layout_weight="1">
	        
	        <TextView 
		        android:gravity="center"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:textColor="#000000"
		        android:textSize="16sp"
		        android:text="未收款"/>
	        
	        <TextView android:id="@+id/sales_amount_unpaid_sum"
		        android:gravity="center"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:textSize="16sp"
		        android:textColor="#666666"
		        android:text="0"/>
	    </LinearLayout>
	      <LinearLayout 
	        android:id="@+id/billing_sales_customers"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	        android:layout_marginTop="5dp"
	        android:layout_weight="0.95">
	        
	        <TextView 
		        android:gravity="center"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:textColor="#000000"
		        android:textSize="16sp"
		        android:text="开单客户数"/>
	        
	        <TextView android:id="@+id/sales_amount_totalcustomer"
		        android:gravity="center"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:textSize="16sp"
		        android:textColor="#666666"
		        android:text="0"/>
	    </LinearLayout>
	</LinearLayout>
	
	<LinearLayout android:id="@+id/line_layout"
	    android:layout_below="@+id/linear_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    
		<View android:layout_width="match_parent"  android:layout_height="0.2dp"  android:background="#c4c4c4" />
	</LinearLayout>
	<com.bangware.shengyibao.view.RefreshListView
	    android:id="@+id/SalesAmountListView"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_below="@+id/line_layout"
	    android:cacheColorHint="#00000000"
	    android:listSelector="#00000000"  
        android:dividerHeight="0.5dp"/>
</RelativeLayout>