<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     
     <RelativeLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         
         <!-- 左边 -->
         <TextView 
             android:id="@+id/link_man"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text=""
             android:textSize="16sp"
             android:textColor="#000000"
             android:paddingLeft="15dp"
             android:layout_centerVertical="true"/>
     	<RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/link_man">
            <!-- 中间部分 -->
		     <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="horizontal" >
			     <RelativeLayout 
			         android:layout_width="match_parent"
			         android:layout_height="wrap_content"
			         android:layout_weight="2">
			         
			         <TextView 
			            android:id="@+id/tel_tv"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:paddingLeft="0dp"
			            android:paddingRight="5dp"
			            android:paddingTop="15dp"
			            android:paddingBottom="10dp"
			            android:text=""
			            android:textColor="#666666"
			            android:textSize="16sp"/>
			         
			         <TextView 
			            android:id="@+id/tel_two_tv" 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:paddingLeft="0dp"
			            android:paddingRight="5dp"
			            android:paddingTop="15dp"
			            android:paddingBottom="10dp"
			            android:layout_below="@+id/tel_tv"
			            android:text=""
			            android:textColor="#666666"
			            android:textSize="16sp"/>
			     </RelativeLayout>
		     <!-- 右边部分 -->
			     <RelativeLayout 
			         android:layout_width="match_parent"
			         android:layout_height="wrap_content"
			         android:gravity="right|center_vertical"
			         android:layout_weight="2">
			         
			         <ImageView 
			            android:id="@+id/phone_img"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:paddingLeft="15dp"
			            android:paddingRight="10dp"
			            android:paddingTop="15dp"
			            android:paddingBottom="10dp"
			            android:clickable="true"
	    				android:background="@drawable/my_tab_background"
			            android:src="@drawable/ic_phone_big"/>
			                    
			         <ImageView 
			            android:id="@+id/msg_img"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:paddingLeft="15dp"
			            android:paddingRight="10dp"
			            android:paddingTop="10dp"
			            android:paddingBottom="10dp"
			            android:src="@drawable/message"
			            android:clickable="true"
	    				android:background="@drawable/my_tab_background"
			            android:layout_toRightOf="@+id/phone_img"/>
			         
			         <ImageView 
			            android:id="@+id/phone_img_two"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:paddingLeft="15dp"
			            android:paddingRight="10dp"
			            android:paddingTop="15dp"
			            android:paddingBottom="10dp"
			            android:layout_below="@+id/phone_img"
			            android:clickable="true"
	    				android:background="@drawable/my_tab_background"
			            android:src="@drawable/ic_phone_big"/>
					        
					 <ImageView 
					    android:id="@+id/msg_img_two"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:paddingLeft="15dp"
			            android:paddingRight="10dp"
			            android:paddingTop="10dp"
			            android:paddingBottom="10dp"
			            android:layout_below="@+id/msg_img"
			            android:layout_toRightOf="@+id/phone_img_two"
			            android:clickable="true"
	    				android:background="@drawable/my_tab_background"
			            android:src="@drawable/message"/>
			     </RelativeLayout>
		     </LinearLayout>
     	</RelativeLayout>
     </RelativeLayout>
         
      <View
	        android:layout_width="0.05dp"
	        android:layout_height="0.05dp"
	        android:background="#ffcccccc" />
 </LinearLayout>

