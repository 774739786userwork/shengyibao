<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:background="@drawable/list_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:paddingRight="5dp" 
        android:paddingLeft="5dp"
        android:layout_weight="5">
        <!-- 右侧第一行 -->
		<RelativeLayout
            android:id="@+id/ItemTopLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
	        <TextView android:id="@+id/salesamount_product_name" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:textColor="#000000"
	            android:text="产品名称"
	            android:textSize="17sp" />
	        
		</RelativeLayout>
		<!-- 右侧第二行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
	        <!-- 右侧第二行的左侧 -->
			<RelativeLayout 
				android:id="@+id/secondRowLeftLayout"
			    android:layout_width="match_parent" 
			    android:layout_height="match_parent"
			    android:layout_alignParentLeft="true"
			    android:layout_weight="20">
			   <LinearLayout
				     android:layout_width="match_parent"
				     android:layout_height="wrap_content"
				     android:gravity="top"
				     android:orientation="vertical" >

			         <LinearLayout
			             android:layout_width="match_parent"
			             android:layout_height="wrap_content"
			             android:gravity="top|center"
			             android:layout_marginTop="5dp"
			             android:orientation="horizontal" >

			             <TextView 
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content" 
					            android:textColor="#666666"
					            android:gravity="left"
					            android:text="总销售额："
					            android:textSize="14sp" />
				             <TextView android:id="@+id/salesamount_sumamount" 
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content" 
				            android:textColor="#FF0000"
				            android:layout_weight="1"
				            android:gravity="left"
				            android:text="10.0/元"
				            android:textSize="14sp" />
				     </LinearLayout>
				     <LinearLayout
					      android:layout_width="match_parent"
					      android:layout_height="wrap_content"
					      android:gravity="top|center"
					      android:layout_marginTop="5dp"
					      android:orientation="horizontal" >
						    <TextView 
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content" 
					            android:textColor="#666666"
					            android:gravity="left"
					            android:text="总销售量："
					            android:textSize="14sp" />
					          <TextView android:id="@+id/salesamount_product_number" 
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content" 
				            android:textColor="#FF0000"
				            android:layout_weight="1"
				            android:gravity="left"
				            android:text="100"
				            android:textSize="14sp" />
					    </LinearLayout>
					 </LinearLayout>
			  </RelativeLayout>
			  <!-- 第二行右侧 -->
			<RelativeLayout 
					android:id="@+id/secondRowRightLayout"
					android:layout_alignParentRight="true"
				    android:layout_width="match_parent" 
				    android:layout_height="match_parent"
				    android:layout_gravity="top"
				    android:layout_weight="15">

				 <LinearLayout
				     android:layout_width="match_parent"
				     android:layout_height="wrap_content"
				     android:gravity="top"
				     android:orientation="vertical" >

			         <LinearLayout
			             android:layout_width="match_parent"
			             android:layout_height="wrap_content"
			             android:gravity="top|center"
			             android:layout_marginTop="5dp"
			             android:orientation="horizontal" >

			            <TextView  
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content" 
				            android:textColor="#666666"
				            android:layout_weight="1"
				            android:gravity="right"
				            android:text="赠送："
				            android:textSize="14sp" />
				        <TextView android:id="@+id/salesamount_giver" 
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content" 
				            android:textColor="#FF0000"
				            android:layout_weight="1"
				            android:gravity="left"
				            android:text="1000.0/元"
				            android:textSize="14sp" />
				     </LinearLayout>
				     <!-- <LinearLayout
					      android:layout_width="match_parent"
					      android:layout_height="wrap_content"
					      android:gravity="top|center"
					      android:layout_marginTop="5dp"
					      android:orientation="horizontal" >
						    <TextView 
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content" 
					            android:textColor="#666666"
					            android:gravity="right"
					            android:text="开单客户数："
					            android:layout_weight="1"
					            android:textSize="14sp" />

						    <TextView
						        android:id="@+id/product_stock"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_weight="1"
						        android:gravity="left"
						        android:text="30"
						        android:textColor="#FF0000"
						        android:textSize="14sp" />

					    </LinearLayout> -->
					 </LinearLayout>
			 	</RelativeLayout>
        	</LinearLayout>
	     </LinearLayout>
</LinearLayout>