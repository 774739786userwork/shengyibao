<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingRight="20dp" >

    <View
        android:id="@+id/view_0"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_marginLeft="51dp"
        android:background="#A6A6A6" />

    <View
        android:id="@+id/view_1"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_marginLeft="51dp"
        android:background="#A6A6A6" />

    <TextView
        android:id="@+id/purchaseMore_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_1"
        android:layout_marginLeft="20dp"
        android:text="2016-8-9"
        android:textColor="#666666"
        android:textSize="14sp" />
    
    <ImageView
        android:id="@+id/image"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/view_1"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/timeline_green" />

    <View
        android:id="@+id/view_2"
        android:layout_width="1dp"
        android:layout_height="80dp"
        android:layout_below="@+id/image"
        android:layout_marginLeft="51dp"
        android:background="#A6A6A6" />

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginTop="-10dp"
        android:layout_toRightOf="@+id/image"
        android:background="@drawable/timeline_content" >

        <TextView 
            android:id="@+id/deliveryNotePerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textColor="#000000"
            android:text="送货人："
            android:textSize="14sp"/>
        <TextView 
            android:id="@+id/deliveryNotePerson_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@+id/deliveryNotePerson"
            android:textColor="#666666"
            android:textSize="14sp"
            android:text="易业成"/>
        
        <TextView 
            android:id="@+id/orderNumber_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginTop="2dp"
            android:textColor="#000000"
            android:text="订单编号："
            android:layout_below="@+id/deliveryNotePerson_textview"
            android:textSize="14sp"/>
        
        <TextView 
            android:id="@+id/order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/orderNumber_text"
            android:layout_below="@+id/deliveryNotePerson_textview"
            android:textColor="#000000"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/product_more_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginTop="2dp"
            android:textColor="#ff8c00"
            android:text="产品详情"
            android:layout_below="@+id/order_number"
            android:textSize="16sp"/>
        
        <!--<TextView
            android:id="@+id/purchaseMore_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/product_more_text"
            android:textColor="#FF0000"
            android:paddingLeft="5dp"
            android:layout_marginTop="2dp"
            android:text="进货金额：1280元"
            android:textSize="14sp"/>
        
        <TextView 
            android:id="@+id/unpaid_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_more_text"
            android:layout_toRightOf="@+id/purchaseMore_money"
            android:textColor="#FF0000"
            android:paddingLeft="10dp"
            android:layout_marginTop="2dp"
            android:text="未付金额：1280元"
            android:textSize="14sp"/>-->
    </RelativeLayout>
</RelativeLayout>
