<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff">
    
	<!-- hearder 头部标签布局 -->
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:layout_alignParentTop="true"
	    android:gravity="center_vertical"
	    android:background="@drawable/title_bar">
	    
	    <ImageView 
	        android:id="@+id/contact_back"
	        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:background="@drawable/about_showleft_selector"/>
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/contactTitle"
	        android:textSize="18sp"
	        android:layout_marginTop="10dp"
	        android:layout_centerHorizontal="true"
	        android:textColor="#ffffff"/>
	        <TextView
            android:id="@+id/contact_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/Cuslist_customerType"
            android:layout_alignParentRight="true"
			android:gravity="center"
			android:layout_marginRight="10dp"
            android:text="添加"
			android:textSize="16sp"
            android:textColor="@drawable/textview_change_focus_color" />
	</RelativeLayout>
	<ListView 
        android:id="@+id/contacts_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#ffcccccc"
        android:dividerHeight="1px"
        android:cacheColorHint="#00000000"
		android:listSelector="#00000000">
   	</ListView>
</LinearLayout>
