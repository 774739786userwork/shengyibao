<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
       	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="35dp"
	    android:background="#E4E4E4"
	    android:orientation="horizontal">

			<TextView
				android:id="@+id/contact_userName"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:text="人名"
				android:gravity="center"

				android:layout_gravity="center_vertical"
				android:layout_marginLeft="10dp"
				android:textColor="#000000"
				android:textSize="20sp" />
			<ImageView
				android:id="@+id/main_customer"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:visibility="gone"
				android:src="@drawable/custom_must"/>
	    <TextView
	        android:id="@+id/editor_tv"
	         android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:textColor="#27B8F3"
			android:layout_weight="1"
	        android:gravity="right|center_vertical"
	        android:layout_marginRight="15dp"
	        android:textSize="17sp"
	        android:text="编辑"/>
	</LinearLayout>
	</LinearLayout>

	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
		   <TextView 
		        android:id="@+id/contact_userMobile"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_marginLeft="10dp"
		        android:textColor="#000000"
		        android:layout_weight="1"
		        android:gravity="center_vertical"
		    	android:textSize="20sp"
		        android:text="null"/>

		    <ImageView
		        android:id="@+id/msg_img"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/my_tab_background"
		        android:clickable="true"
		        android:layout_marginRight="20dp"
		        android:src="@drawable/cm_message_img" />
		    
		    <ImageView 
	            android:id="@+id/phone_img"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:clickable="true"
	            android:layout_marginRight="10dp"
	            android:layout_gravity="right"
	  			android:background="@drawable/my_tab_background"
	            android:src="@drawable/cm_contact_call"/>
	    </LinearLayout>

	    <LinearLayout
	        android:layout_marginTop="5dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
		    <TextView
		        android:id="@+id/contact_userMobile_two"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_marginLeft="10dp"
		        android:textColor="#000000"
		        android:layout_weight="1"
		        android:gravity="center_vertical"
		    	android:textSize="20sp"
		        android:text="null"/>

		    <ImageView
	            android:id="@+id/msg_img_two"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:src="@drawable/cm_message_img"
	            android:layout_gravity="center"
	            android:clickable="true"
	            android:layout_marginRight="20dp"
	  			android:background="@drawable/my_tab_background"/>
		    
		    <ImageView 
	            android:id="@+id/phone_img_two"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:clickable="true"
	            android:layout_gravity="right"
	            android:layout_marginRight="10dp"
	  			android:background="@drawable/my_tab_background"
	            android:src="@drawable/cm_contact_call"/>
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>
