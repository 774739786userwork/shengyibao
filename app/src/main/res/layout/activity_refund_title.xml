<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="vertical"
    android:background="@drawable/title_background"
    android:padding="0.0px" >
 	<RelativeLayout 
        android:id="@+id/Refund_title"
        android:layout_width="match_parent"
	    android:layout_height="44dp"
	    android:gravity="top"
	    android:padding="0.0dp" 
	     >
	    <ImageView
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:background="@drawable/title_background" />
	
	    <TextView
	        style="@style/A1_Font"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_centerInParent="true"
	        android:ellipsize="end"
	        android:gravity="center"
	        android:paddingLeft="96.0dip"
	        android:paddingRight="96.0dip"
	        android:text="退货确认" />
	
	    <ImageButton
	        android:id="@+id/Refund_GoBackBtn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="5dip"
	        android:layout_centerVertical="true"
	        android:background="@drawable/about_showleft_selector"
	        android:gravity="center"
	        android:includeFontPadding="false" />
    
    	<TextView 
    	    android:id="@+id/Refund_Remark"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentRight="true"
    	    android:layout_centerVertical="true"
    	    android:layout_marginRight="5dip"
    	    android:text="退货原因"
    	    android:textColor="#ffffff"/>
	</RelativeLayout>
	<ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:scrollbars="none">
   	<LinearLayout 
		 android:layout_width="match_parent"
		 android:layout_height="62dp"
		 android:gravity="left"
		 android:orientation="vertical">
    
   	    <TextView android:id="@+id/Refund_Customer_Id"
    	    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="4dp"
            android:textColor="#fff"
            android:textSize="14sp"
            android:text=""
            android:visibility="gone"/>
   	    
   	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:orientation="horizontal">
	    	
	    	<TextView
	            android:id="@+id/Refund_Customer_Contact"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="15dp"
	            android:layout_marginTop="4dp"
	            android:textColor="#fff"
	            android:textSize="16sp"
	            android:layout_weight="1"
	            android:text=""/>
	    	<TextView
	            android:id="@+id/Refund_Customer_Mobile"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:layout_marginTop="4dp"
	            android:textColor="#fff"
	            android:textSize="15sp"
	            android:layout_weight="1"
	            android:text=""/>
    	</LinearLayout>
    
   	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
		  	<TextView
	            android:id="@+id/Refund_Customer_Name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="15dp"
	            android:textSize="14sp"
				android:textColor="#fff"
	            android:gravity="left"
	            android:layout_weight="1"
	            android:text=""/>

		  	<TextView
		  	    android:id="@+id/Refund_Customer_Address"
		  	    android:layout_width="wrap_content"
		  	    android:layout_height="wrap_content"
		  	    android:layout_weight="1"
		  	    android:layout_marginLeft="15dp"
		  	    android:gravity="left"
		  	    android:text=""
				android:textColor="#fff"
		  	    android:textSize="14sp" />
		</LinearLayout>
        
	</LinearLayout>
	</ScrollView>
</LinearLayout>