<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_manager_html"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bangware.shengyibao.customervisits.view.ManagerHtmlActivity">

    <!-- hearder 头部标签布局 -->
    <RelativeLayout
        android:id="@+id/hearder_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:background="@drawable/title_bar">

        <ImageView
            android:id="@+id/visit_analysis_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:background="@drawable/about_showleft_selector"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户拜访分析"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"/>
    </RelativeLayout>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webView_manager"
        android:layout_below="@+id/hearder_layout"/>
</RelativeLayout>
