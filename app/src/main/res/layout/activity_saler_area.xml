<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >
    
    <!-- hearder 头部标签布局 -->
	<RelativeLayout android:id="@+id/rel_layout_header"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:layout_alignParentTop="true"
	    android:gravity="center_vertical"
	    android:background="@drawable/title_bar">
	    
	    <ImageView 
	        android:id="@+id/customer_salerArea_back"
	        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:background="@drawable/about_showleft_selector"/>
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="请选择营销区域"
	        android:textSize="18sp"
	        android:layout_marginTop="10dp"
	        android:layout_centerHorizontal="true"
	        android:textColor="#ffffff"/>
	    
	</RelativeLayout>
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/rel_layout_header"
	    android:orientation="vertical">
	    
	    <GridView 
			android:id="@+id/saler_area_gridview"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:numColumns="4"
			android:verticalSpacing="-0.5dp"
			android:horizontalSpacing="-0.5dp"
			android:stretchMode="columnWidth"
			android:gravity="center"
			android:listSelector="@drawable/gridview_salearea_selector"
		 />
	</LinearLayout>
</RelativeLayout>
<!-- android:listSelector="@android:color/transparent" -->