<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_background"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/Show_GoodsList_Item_Product_Name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="null"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textSize="20sp" />
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销量："
                android:textSize="14sp" />

            <TextView
                android:id="@+id/Show_GoodsList_Item_salesVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="00"
                android:textColor="#ff0000"
                android:textSize="14sp" />
            <TextView
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赠送："
                android:textSize="14sp" />

            <TextView
                android:id="@+id/Show_GoodsList_Item_gift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="00"
                android:textColor="#ff0000"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
                <TextView
                android:id="@+id/Show_GoodsList_Item_foregift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="押金："
                android:textSize="14sp" />
                <TextView
                android:id="@+id/Show_GoodsList_Item_foregift_Sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text=""
                android:textColor="#ff0000"
                android:textSize="14sp" />
        </LinearLayout> 
    </LinearLayout>
</LinearLayout>
</LinearLayout>