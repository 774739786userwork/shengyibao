<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <!-- hearder 头部标签布局 -->

    <RelativeLayout
        android:id="@+id/titlerelativelayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_bar"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/ConDetailList_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/about_showleft_selector"
            android:paddingLeft="10dp" />

        <!-- android:src="@drawable/search_customer" -->

        <LinearLayout
            android:id="@+id/Cuslist_customerType"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/ConDetailList_back"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/Cuslist_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="联系人详情"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </LinearLayout>
      

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titlerelativelayout"
        android:orientation="vertical" >
<!-- content 内容区域布局 -->
	<LinearLayout android:id="@+id/content"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    >
	     <View
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:background="#ffcccccc" />
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" 
	        android:background="#E4E4E4">

	        <TextView
	            android:id="@+id/Contact_Detail_name"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="0.28"
	            android:layout_marginLeft="5dp"
	            android:text="姓名"
	            android:textColor="#000000"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"
	            android:textSize="20sp" />

	        <TextView
	            android:id="@+id/Contact_editor"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_marginRight="5dp"
	            android:textColor="#27B8F3"
	            android:textSize="17sp"
	            android:gravity="center_vertical"
	            android:text="编辑"
	             />

	    </LinearLayout>

           <View
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:background="#ffcccccc" />
       
        <TextView
            android:id="@+id/Contact_Detail_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="手机1"
             android:layout_marginLeft="5dp"
            android:textColor="#919191"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_gravity="center">

            <TextView
                android:id="@+id/Contact_Detail_mobile1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.95"
                 android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:text="null"
                android:textSize="20sp" />
            <ImageView 
                android:id="@+id/msg_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cm_message_img"
                android:layout_marginRight="20dp"/>

            <ImageView
                android:id="@+id/Call_Phone1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/cm_contact_call" />

        </LinearLayout>
          <View
            android:id="@+id/customer_contact_view1"
            android:layout_marginTop="2dp"
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:background="#ffcccccc" />
         
         <TextView
            android:id="@+id/Contact_Detail_mobilephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
             android:textColor="#919191"
              android:layout_marginLeft="5dp"
             android:text="手机2"
            android:textSize="18sp" />
           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

        <TextView
            android:id="@+id/Contact_Detail_mobilephone2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:gravity="center_vertical"
            android:textColor="#000000"
             android:layout_marginLeft="5dp"
            android:text="null"
            android:textSize="20sp" />
        <ImageView android:id="@+id/msg_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cm_message_img"
                android:layout_marginRight="20dp"/>
        <ImageView
                android:id="@+id/Call_Phone2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/cm_contact_call" />

        </LinearLayout>
           <View
            android:id="@+id/customer_contact_view2"
            android:layout_marginTop="2dp"
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:background="#ffcccccc" />
           <TextView
            android:id="@+id/Contact_Detail_Position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#919191"
            android:text="职务"
            android:textSize="16sp" 
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/Contact_Detail_PositionValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="null"
             android:layout_marginLeft="5dp"
            android:textSize="18sp" />
           <View
            android:id="@+id/customer_contact_view3"
            android:layout_marginTop="2dp"
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:background="#ffcccccc" />
		<TextView
			android:id="@+id/Con_Detail_Shopname"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:layout_marginTop="15dp"
			android:layout_marginRight="5dp"
			android:textSize="20sp"
			android:text="ss"
			android:drawableRight="@drawable/arrow_right"
			/>
		<View
			android:id="@+id/customer_contact_view4"
			android:layout_marginTop="2dp"
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:background="#ffcccccc" />
    </LinearLayout>
    
  </LinearLayout>
       
</RelativeLayout>