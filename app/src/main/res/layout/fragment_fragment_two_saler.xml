<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/fragment_title"
    android:gravity="top"
    android:clickable="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <View android:layout_width="wrap_content"  android:layout_height="4dp"  android:background="#e0e0e0" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:baselineAligned="true"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <ImageView
                android:id="@+id/main_icon_mine"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_calendar_time" />
            <TextView
                android:id="@+id/today_date_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="@color/button_font_color"
                android:textSize="16dp" />
        </LinearLayout>
        <View android:layout_width="wrap_content"  android:layout_height="4dp"  android:background="#e0e0e0" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:background="#ffffff"
            android:paddingBottom="10dp"
            android:baselineAligned="true"
            android:gravity="center"
            android:orientation="horizontal" >
            <LinearLayout
                android:id="@+id/customer_visit_linearLayout"
                android:background="@drawable/grid_view_item_selector_xml"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:src="@drawable/icon_customer_manager" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="客户拜访"
                    android:textColor="#000000"
                    android:textSize="14dp" />
            </LinearLayout>

            <View android:layout_width="0.5dp"  android:layout_height="70dp"  android:background="#e0e0e0" />

            <LinearLayout
                android:id="@+id/today_visit_linearLayout"
                android:background="@drawable/grid_view_item_selector_xml"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:src="@drawable/icon_purchernote" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="今日拜访"
                    android:textColor="#000000"
                    android:textSize="14dp" />
            </LinearLayout>

            <View android:layout_width="0.5dp"  android:layout_height="70dp"  android:background="#e0e0e0" />

            <LinearLayout
                android:id="@+id/thisweek_visit_linearLayout"
                android:background="@drawable/grid_view_item_selector_xml"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:src="@drawable/icon_loadingbill"
                    android:id="@+id/imageView2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="本周拜访"
                    android:textColor="#000000"
                    android:textSize="14dp" />
            </LinearLayout>
            <View android:layout_width="0.5dp"  android:layout_height="70dp"  android:background="#e0e0e0" />
            <LinearLayout
                android:id="@+id/thismonth_visit_linearLayout"
                android:background="@drawable/grid_view_item_selector_xml"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:src="@drawable/icon_returnnote" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="本月拜访"
                    android:textColor="#000000"
                    android:textSize="14dp" />
            </LinearLayout>

            <View android:layout_width="0.5dp"  android:layout_height="70dp"  android:background="#e0e0e0" />

        </LinearLayout>
        <View android:layout_width="wrap_content"  android:layout_height="4dp"  android:background="#e0e0e0" />
    </LinearLayout>

</LinearLayout>
