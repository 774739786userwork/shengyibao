<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="20dp" >

    <View
        android:id="@+id/view_0"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_marginLeft="51dp"
        android:background="#A6A6A6" />

    <View
        android:id="@+id/view_1"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_marginLeft="51dp"
        android:background="#A6A6A6" />

    <TextView
        android:id="@+id/disburden_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_1"
        android:layout_marginLeft="20dp"
        android:text=""
        android:textColor="#666666"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/view_1"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/timeline_green" />

    <View
        android:id="@+id/view_2"
        android:layout_width="1dp"
        android:layout_height="80dp"
        android:layout_below="@+id/image"
        android:layout_marginLeft="51dp"
        android:background="#A6A6A6" />

    <RelativeLayout
        android:id="@+id/disburden_relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginTop="-10dp"
        android:layout_toRightOf="@+id/image"
        android:background="@drawable/timeline_content"
        android:padding="6dp" >

        <TextView
            android:id="@+id/orderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textColor="#000000"
            android:text="卸货单编号："
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/disburden_serial_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@+id/orderId"
            android:text="11"
            android:textColor="#666666"
            android:textSize="14sp"/>

        <!--<TextView
            android:id="@+id/product_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textColor="#000000"
            android:text="产品列表清单如下："
            android:layout_below="@+id/ladbilling_serial_number"
            android:textSize="14sp"/>-->

        <TextView
            android:id="@+id/disburden_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/orderId"
            android:textColor="#ff8c00"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/disburden_carnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/disburden_product"
            android:textColor="#FF0000"
            android:layout_marginTop="5dp"
            android:paddingLeft="3dp"
            android:text=""
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/creat_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/disburden_product"
            android:textColor="#FF0000"
            android:layout_marginTop="5dp"
            android:text=""
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/disburden_remove"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="作废"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/red"
            android:background="@color/gray"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_below="@+id/creat_person"/>
    </RelativeLayout>
</RelativeLayout>
