<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fuzzy_query_practical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="com.bangware.shengyibao.practicalprojects.view.FuzzyQueryPractical">

    <LinearLayout
        android:id="@+id/titlere_lativelayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_bar"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/pra_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/about_showleft_selector" />

            <com.bangware.shengyibao.utils.ClearEditText
                android:id="@+id/pra_edit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:background="@drawable/search_bar_edit_selector"
                android:drawableLeft="@drawable/search_bar_icon_normal"
                android:hint="输入案例总结关键字搜索"
                android:padding="5dp"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/pra_query_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@drawable/textview_change_focus_color"
                android:text="确定"/>

</LinearLayout>
</RelativeLayout>