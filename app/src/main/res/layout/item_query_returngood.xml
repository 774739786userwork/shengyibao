<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="10dp">

    <View
        android:id="@+id/view_0"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_marginLeft="51dp"
        android:background="#A6A6A6" />

    <View
        android:id="@+id/view_1"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_marginLeft="51dp"
        android:background="#A6A6A6" />

    <TextView
        android:id="@+id/return_good_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_1"
        android:layout_marginLeft="20dp"
        android:text=""
        android:textColor="#666666"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/view_1"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/timeline_green" />

    <View
        android:id="@+id/view_2"
        android:layout_width="1dp"
        android:layout_height="80dp"
        android:layout_below="@+id/image"
        android:layout_marginLeft="51dp"
        android:background="#A6A6A6" />

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/image"
        android:layout_marginTop="-10dp"
        android:layout_toRightOf="@+id/image"
        android:background="@drawable/timeline_content"
        android:padding="8dp" >

        <TextView 
            android:id="@+id/return_goodId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="退货单编号："
            android:textSize="15sp"/>
        <TextView 
            android:id="@+id/return_good_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@+id/return_goodId"
            android:textColor="#666666"
            android:textSize="15sp"
            android:text=""/>
        
        <TextView 
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/return_good_number"
            android:textColor="#666666"
            android:textSize="18sp"
            android:text=""/>
        
        <TextView 
            android:id="@+id/return_good_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/shop_name"
            android:textColor="#666666"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:text=""/>

        
        <TextView 
            android:id="@+id/return_good_totalSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/shop_name"
            android:textColor="#FF0000"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:text=""/>
        
        <!-- <TextView
            android:id="@+id/return_good_carnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/return_good_person"
            android:layout_toRightOf="@+id/return_good_totalSum"
            android:text=""
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#FF0000"
            android:textSize="15sp" /> -->
        
        <TextView 
            android:id="@+id/return_good_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/return_good_person"
            android:textColor="#FF0000"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="15sp"
            android:text=""/>
    </RelativeLayout>
</RelativeLayout>