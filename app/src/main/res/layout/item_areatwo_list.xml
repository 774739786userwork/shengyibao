<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_tab_background"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="10dp" >

    <LinearLayout
        android:id="@+id/Area_twoList_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_list_txt_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="0dp" >

        <TextView
            android:id="@+id/Search_Area_listitem_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="8.5dp"
            android:paddingTop="8dp"
            android:text=""
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#666666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Search_AreaId_listitem_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="8.5dp"
            android:paddingTop="8dp"
            android:text=""
            android:visibility="gone"
            android:ellipsize="end"
            android:textColor="#666666"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>