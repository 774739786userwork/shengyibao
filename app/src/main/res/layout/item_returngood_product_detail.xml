<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView 
        android:id="@+id/returnGood_detail_Product_Image" 
        android:layout_width="170dp"
        android:layout_height="60dp" 
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="8"/>

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:padding="5dp" 
        android:layout_weight="5">
        <!-- 右侧第一行 -->
		<RelativeLayout
            android:id="@+id/returnGood_detail_TopLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="37"
            >
	        <TextView android:id="@+id/returnGood_detail_Product_Name" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:textColor="#000000"
	            android:text="多邦外墙腻子王"
	            android:textSize="17sp" />
		</RelativeLayout>
		<!-- 右侧第二行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:gravity="left"
            android:orientation="horizontal">
	        <TextView  
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:textColor="#666666"
	            android:text="退货数量："
	            android:textSize="15sp" />
	        <TextView android:id="@+id/returnGood_detail_Product_SalesVolume" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:textColor="#ff0000"
	            android:text="10"
	            android:textSize="15sp" />
	       
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="40"
	            android:gravity="right"
	            android:orientation="horizontal">
		        <TextView  
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" 
		            android:gravity="right"
		            android:textColor="#666666"
		            android:text="单价："
		            android:textSize="15sp" />
		        
		        <TextView android:id="@+id/returnGood_product_unitPrice"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" 
		            android:gravity="right"
		            android:textColor="#ff0000"
		            android:text="¥5.00"
		            android:textSize="15sp" />
		     </LinearLayout>
	    </LinearLayout>

		<!-- 右侧第三行 -->
		<LinearLayout
			android:id="@+id/basic_linearLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="40"
			android:gravity="left"
			android:orientation="horizontal">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#666666"
				android:text="零退数量："
				android:textSize="15sp" />
			<TextView android:id="@+id/returnGood_detail_Product_BasicVolume"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#ff0000"
				android:text="10"
				android:textSize="15sp" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="40"
				android:gravity="right"
				android:orientation="horizontal">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="right"
					android:textColor="#666666"
					android:text="零售价："
					android:textSize="15sp" />

				<TextView android:id="@+id/returnGood_product_basicprice"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="right"
					android:textColor="#ff0000"
					android:text="¥5.00"
					android:textSize="15sp" />
			</LinearLayout>
		</LinearLayout>
	    <!-- 右侧第四行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:gravity="left"
            android:orientation="horizontal">
	        <TextView android:id="@+id/returnGood_detail_Product_GiftsVolume" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:gravity="right"
	            android:textColor="#666666"
	            android:text="赠送3包"
	            android:textSize="15sp" />
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="40"
	            android:gravity="right"
	            android:orientation="horizontal">
		        <TextView  
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" 
		            android:gravity="right"
		            android:textColor="#666666"
		            android:text="总金额："
		            android:textSize="15sp" />
		        
		        <TextView android:id="@+id/returnGood_detail_Product_totalSum"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" 
		            android:gravity="right"
		            android:textColor="#ff0000"
		            android:text="¥2800.00"
		            android:textSize="15sp" />
		     </LinearLayout>
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>
