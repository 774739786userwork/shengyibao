<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp">
    <LinearLayout
        android:id="@+id/ll_common_dialog"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/bg_c13939_corners_30">
        <!--内容-->
        <TextView
            android:id="@+id/tv_dialog_common_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="75dp"
            android:textSize="@dimen/f36sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/h10dip"
            android:text=""/>
        <!--@c去登录-->
        <TextView
            android:id="@+id/tv_dialog_common_go"
            android:layout_width="match_parent"
            android:layout_height="@dimen/w100dip"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="45dp"
            android:text=""
            android:gravity="center"
            android:textSize="@dimen/f36sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_a82626_corners_50"
            android:lineSpacingExtra="@dimen/h10dip"/>
    </LinearLayout>
    <!--@c关闭-->
    <TextView
        android:id="@+id/tv_dialog_common_close"
        android:layout_width="@dimen/h70dip"
        android:layout_height="@dimen/h70dip"
        android:background="@drawable/login_dialog_close"
        android:layout_toRightOf="@+id/ll_common_dialog"
        android:layout_alignTop="@+id/ll_common_dialog"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="-15dp"
        />
</RelativeLayout>
