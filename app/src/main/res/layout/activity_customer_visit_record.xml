<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:orientation="vertical">

    <!-- hearder 头部标签布局 -->
    <RelativeLayout
        android:id="@+id/hearder_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:background="@drawable/title_bar">

        <ImageView
            android:id="@+id/visit_record_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:background="@drawable/about_showleft_selector"/>

        <TextView
            android:id="@+id/title_visits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拜访记录"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"/>
    </RelativeLayout>

    <include layout="@layout/activity_visit_top_tab"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/id_page_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>
</LinearLayout>
