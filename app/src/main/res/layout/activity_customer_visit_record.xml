<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light">

    <!-- hearder 头部标签布局 -->
    <RelativeLayout
        android:id="@+id/hearder_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:background="@drawable/title_bar">

        <ImageView
            android:id="@+id/visit_record_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:background="@drawable/about_showleft_selector"/>

        <TextView
            android:id="@+id/title_visits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拜访记录"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"/>
    </RelativeLayout>

    <com.bangware.shengyibao.view.RefreshListView
        android:id="@+id/visit_record_ListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/hearder_layout"
        android:layout_margin="5dp"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000"
        android:clickable="true"
        android:divider="@color/gray_light"
        android:dividerHeight="5dp"/>
</RelativeLayout>
