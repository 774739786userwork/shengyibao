<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contactslayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_one"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:hint="请输入记量人"/>

        <EditText
            android:id="@+id/ed_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:digits="1234567890."
            android:inputType="numberDecimal"
            android:numeric="decimal"
            android:textSize="15sp"
            android:hint="请输入记量"/>

        <TextView
            android:id="@+id/delete"
            android:layout_width="@dimen/h70dip"
            android:layout_height="@dimen/h70dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/login_dialog_close"/>

    </RelativeLayout>

    <View android:layout_width="match_parent"  android:layout_height="0.5dp"  android:background="@color/gray" />
</LinearLayout>
