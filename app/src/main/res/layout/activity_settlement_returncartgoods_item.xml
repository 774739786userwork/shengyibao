<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:background="@drawable/list_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <!--<ImageView android:id="@+id/ReturnsCart_GoodsList_Item_Product_Image"
        android:layout_width="170dp"
        android:layout_height="60dp" 
        android:src="@drawable/shop_photo_frame"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="8"/>-->

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:padding="5dp" >
        <!-- 右侧第一行 -->
		<LinearLayout
            android:id="@+id/ReturnsCart_GoodsList_Item_TopLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="37"
            android:orientation="horizontal">
	        <TextView android:id="@+id/ReturnsCart_GoodsList_Item_Product_Name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:textColor="#000000"
	            android:layout_weight="1"
	            android:text="多邦外墙腻子王"
	            android:textSize="17sp" />
	        <TextView
	            android:id="@+id/ReturnsCart_GoodsList_Item_Product_Foregift"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#666666"
	            android:textSize="15sp"
	            android:text="押金："/>
	        <TextView
	            android:id="@+id/ReturnsCart_GoodsList_Item_Product_Foregift_sum"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#ff0000"
	            android:textSize="15sp"
	            android:text="500"
	            />
		</LinearLayout>
		<!-- 右侧第二行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:gravity="left"
            android:orientation="horizontal">
	        <TextView android:id="@+id/ReturnsCart_GoodsList_Item_Sale_Summary"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:textColor="#666666"
	            android:text="售价"
	            android:textSize="15sp" />
	        <TextView android:id="@+id/ReturnsCart_GoodsList_Item_Price"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:textColor="#ff0000"
	            android:text="¥14.00"
	            android:textSize="15sp" />
	        <TextView android:id="@+id/ReturnsCart_GoodsList_Item_SalesVolume"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:textColor="#ff0000"
	            android:text="x200"
	            android:textSize="15sp" />
	        <TextView android:id="@+id/ReturnsCart_GoodsList_Item_SubtotalAmount"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="right"
	            android:textColor="#ff0000"
	            android:text="¥2800.00"
	            android:textSize="15sp" />
	    </LinearLayout>

	    <!-- 右侧第三行 -->
		<LinearLayout
			android:id="@+id/returnCart_basic_linearLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="40"
			android:gravity="left"
			android:orientation="horizontal">
			<TextView android:id="@+id/ReturnsCart_GoodsList_Item_BasicSummary"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#666666"
				android:text="零售"
				android:textSize="15sp" />
			<TextView android:id="@+id/ReturnsCart_GoodsList_Item_BasicPrice"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#ff0000"
				android:text="¥14.00"
				android:textSize="15sp" />
			<TextView android:id="@+id/ReturnsCart_GoodsList_Item_BasicVolume"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#ff0000"
				android:text="x200"
				android:textSize="15sp" />

		</LinearLayout>

		<!-- 右侧第四行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:gravity="left"
            android:orientation="horizontal">
	        <TextView android:id="@+id/ReturnsCart_GoodsList_Item_GiftsVolume"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:gravity="right"
	            android:textColor="#ff0000"
	            android:text="赠送3包"
	            android:textSize="15sp" />
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="40"
	            android:gravity="right"
	            android:orientation="horizontal">
		        <TextView android:id="@+id/ReturnsCart_GoodsList_Item__SubtotalVolume_Summary"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" 
		            android:gravity="right"
		            android:textColor="#666666"
		            android:text="数量小计："
		            android:textSize="15sp" />
		        <TextView android:id="@+id/ReturnsCart_GoodsList_Item__SubtotalVolume"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" 
		            android:gravity="right"
		            android:textColor="#ff0000"
		            android:text="203包"
		            android:textSize="15sp" />
		     </LinearLayout>
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>