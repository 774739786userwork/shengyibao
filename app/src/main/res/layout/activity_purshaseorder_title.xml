<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="vertical"
    android:background="@drawable/title_background"
    android:padding="0.0px" >
 <RelativeLayout 
        android:id="@+id/deliverynote_detail_title"
        android:layout_width="match_parent"
	    android:layout_height="44dp"
	    android:gravity="top"
	    android:padding="0.0dp" 
	     >
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/title_background" />

    <TextView
        style="@style/A1_Font"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="96.0dip"
        android:paddingRight="96.0dip"
        android:singleLine="true"
        android:text="订货单详情" />

    <ImageButton
        android:id="@+id/purchaseorder_detail_GoBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dip"
        android:layout_centerVertical="true"
        android:background="@drawable/about_showleft_selector"
        android:gravity="center"
        android:includeFontPadding="false" />
	</RelativeLayout>
	<ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
   	<LinearLayout 
		 android:layout_width="match_parent"
		 android:layout_height="80dp"
		 android:gravity="left"
		 android:orientation="vertical">
    
   	    <TextView android:id="@+id/purchaseorder_detail_Customer_Id"
    	    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="4dp"
            android:textColor="#fff"
            android:textSize="17sp"
            android:text=""
            android:visibility="gone"/>
    
   	    <TextView
            android:id="@+id/purchaseorder_detail_Customer_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="4dp"
            android:textColor="#fff"
            android:textSize="17sp"
            android:text="湘阴建材"/>
   	    
	  	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:orientation="horizontal"
	        android:layout_height="30dp">
	    	
	    	<TextView
	            android:id="@+id/purchaseorder_detail_Customer_Contact"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="15dp"
	            android:layout_marginTop="4dp"
	            android:layout_weight="1"
	            android:textColor="#fff"
	            android:textSize="17sp"
	            android:text="任老板"/>
	    	<TextView
	            android:id="@+id/purchaseorder_detail_Customer_Mobile"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:layout_weight="1"
	            android:layout_marginLeft="5dp"
	            android:layout_marginTop="4dp"
	            android:textColor="#fff"
	            android:textSize="17sp"
	            android:text="13878785566"/>
	   	</LinearLayout>
    	
        <TextView
            android:id="@+id/purchaseorder_detail_Customer_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="绿地海外滩22栋103门面"
            android:textColor="#fff"
            android:textSize="14.0sp" />   
            
	</LinearLayout>
	</ScrollView>
</LinearLayout>
