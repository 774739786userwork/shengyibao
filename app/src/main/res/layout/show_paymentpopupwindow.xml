<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pay_window"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
     >
<LinearLayout
    android:background="@drawable/shape_product_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
  >
    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/weixin"/>
            <EditText
                android:id="@+id/wechat_payment"
                android:background="@drawable/bg_edittext"
                android:selectAllOnFocus="true"
                android:layout_gravity="center"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="0"
                android:inputType="numberDecimal"
                android:digits="1234567890."
                android:numeric="decimal"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#ff0000"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/zhifubao"/>
            <EditText
                android:id="@+id/Alipay"
                android:background="@drawable/bg_edittext"
                android:selectAllOnFocus="true"
                android:layout_gravity="center"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="0"
                android:inputType="numberDecimal"
                android:digits="1234567890."
                android:numeric="decimal"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#ff0000"/>
        </LinearLayout>

     </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/yinhan"/>
        <EditText
            android:id="@+id/bank_receive_total_sum"
            android:background="@drawable/bg_edittext"
            android:selectAllOnFocus="true"
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:text="0"
            android:inputType="numberDecimal"
            android:digits="1234567890."
            android:numeric="decimal"
            android:singleLine="true"
            android:textSize="18sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="#ff0000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/xianjin"/>
            <EditText
                android:id="@+id/cash_payment"
                android:background="@drawable/bg_edittext"
                android:selectAllOnFocus="true"
                android:layout_gravity="center"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="0"
                android:inputType="numberDecimal"
                android:digits="1234567890."
                android:numeric="decimal"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#ff0000"/>

        </LinearLayout>
    </LinearLayout>
         <Button
             android:id="@+id/payment_ok"
             android:layout_width="match_parent"
             android:layout_height="35dp"
             android:background="@drawable/selector_button_corners"
             android:text="确定"
             android:textSize="20sp"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:layout_marginBottom="5dp"
             android:layout_marginTop="10dp"
             android:textColor="@color/white"
              />
</LinearLayout>
</RelativeLayout>